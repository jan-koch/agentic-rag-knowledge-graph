[Unit]
Description=Riddly AI Chat Interface with Tailwind CSS
After=network.target
Wants=network-online.target

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=/var/www/agentic-rag-knowledge-graph/frontend/streamlit
Environment=PATH=/var/www/agentic-rag-knowledge-graph/venv/bin:/usr/local/bin:/usr/bin:/bin
Environment=PYTHONPATH=/var/www/agentic-rag-knowledge-graph
ExecStart=/var/www/agentic-rag-knowledge-graph/venv/bin/streamlit run app.py --server.port 8501 --server.address 127.0.0.1 --server.headless true --browser.gatherUsageStats false --theme.base light
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal
SyslogIdentifier=riddly-chat

# Security settings
NoNewPrivileges=yes
PrivateTmp=yes
ProtectSystem=strict
ProtectHome=yes
ReadWritePaths=/var/www/agentic-rag-knowledge-graph
ProtectKernelTunables=yes
ProtectKernelModules=yes
ProtectControlGroups=yes

# Resource limits
LimitNOFILE=65536
MemoryMax=1G
CPUQuota=50%

[Install]
WantedBy=multi-user.target